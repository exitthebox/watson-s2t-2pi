{
  "name": "SpeechToTextBrowserStarterApp",
  "version": "0.2.1",
  "description": "A sample browser app for Bluemix that use the speech-to-text service, fetching a token via Node.js",
  "dependencies": {
    "body-parser": "^1.10.2",
    "connect": "~3.3.5",
    "errorhandler": "~1.2.4",
    "express": "~4.10.8",
    "harmon": "~1.3.1",
    "http-proxy": "~1.11.1",
    "i18next": "^1.10.4",
    "jade": "^1.11.0",
    "request": "^2.60.0",
    "socket.io": "^1.3.6",
    "transformer-proxy": "~0.3.1",
    "watson-developer-cloud": "~0.9.19"
  },
  "engines": {
    "node": "0.10.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/watson-developer-cloud/speech-to-text-browser.git"
  },
  "author": "IBM Corp.",
  "browserify-shim": {
    "jquery": "global:jQuery"
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
